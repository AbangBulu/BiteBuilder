public class Customer {
    private String name;
    private String address;
    private int id;
    private BurgerOrder burgerOrder;

    public Customer(String name, String address, int id) {
        this.name = name;
        this.address = address;
        this.id = id;
        this.burgerOrder = new BurgerOrder();
    }

    public String getName() {
        return name;
    }

    public String getAddress() {
        return address;
    }

    public int getId() {
        return id;
    }

    public BurgerOrder getBurgerOrder() {
        return burgerOrder;
    }
}
